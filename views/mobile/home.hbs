<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../css/utils.css" />
    <link rel="stylesheet" href="../css/footer.css" />
    <link rel="stylesheet" href="../css/nav.css" />
    <link rel="stylesheet" href="../css/home/products.css" />
    <link rel="stylesheet" href="../css/home/main.css" />
  </head>
  <body>
    <nav>
      <div class="container">
        <div class="logo">
          <span
            ><img
              style="width: 50px; height: 35px"
              src="/svg/menu_black_24dp.svg"
              alt="svg"
          /></span>
          <h2>Art of Electronics</h2>
        </div>
        <ul class="nav_menu">
          <li class="menu_item">
            <a href="/profile" class="links">
              <img
                src="/svg/person_black_24dp.svg"
                alt="icon"
                class="mobile_icon"
              />
            </a>
          </li>
          <li class="menu_item">
            <a href="/cart" class="links">
              <img src="/svg/cart.svg" alt="icon" class="mobile_icon" />
            </a>
          </li>
        </ul>
        <form class="search" action="/search" method="post">
          <input type="search" name="" id="" />
          <button type="submit">
            <img class="mobile_icon" src="/svg/search.svg" alt="icon" />
          </button>
        </form>
      </div>
    </nav>
    <!-- end of navbar -->

    <!-- start of features -->
    <div class="collection">
      <h3 style="color: black">Shop From our Collection</h3>
      <div class="container">
        {{#each categories}}
        <div class="card">
          <div class="card_imgs">
            <a href="/p/{{this.category}}" class="card_img">
              <img
                class="b-radius"
                src="data:image/png;base64,{{this.image}}"
                alt=""
                loading="lazy"
              />
            </a>
          </div>
          <div class="card_text">
            <h3 style="color: black">{{this.category}}</h3>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    <!-- start of features -->

    <!-- start of Recent -->
    <section class="recent_products">
      <h3>Recent Deals</h3>
      <div class="container">
          <!-- products -->
          <div class="recent">
            {{#each recent}}
            <div class="card" id="product">
              <a href="/p/{{this.category}}/{{this.name}}">
                <div class="card_img">
                  <img
                    class="b-radius"
                    loading="lazy"
                    src="data:image/png;base64,{{this.image}}"
                    alt=""
                  />
                </div>
                <div class="card_text">
                  <p id="product_name">{{this.name}}</p>
                </div>
              </a>
            </div>
            {{/each}}
          </div>
      </div>
    </section>
    <!-- end of Recent -->
    <!-- start of More -->
    <section class="more">
      <h3>More To Like</h3>
      <div class="container">
          <!-- products -->
          <div class="mores">
            {{#each products}}
            <div class="card" id="product">
              <a href="/p/{{this.category}}/{{this.name}}">
                <p id="product_id" hidden></p>
                <div class="card_img">
                  <img
                    class="b-radius"
                    loading="lazy"
                    src="data:image/png;base64,{{this.image}}"
                    alt="{{this.name}}"
                  />
                </div>
                <div class="card_text">
                  <p id="product_name">{{this.name}}</p>
                </div>
                <div class="card_price">
                  <span style="margin-right: 0.2rem">&#8358;</span>
                  <span id="price">{{this.price}}</span><span>.00</span>
                </div>
              </a>
            </div>
            {{/each}}
          </div>
      </div>
    </section>
    <!-- end of More -->
    <!-- start of footer -->
    {{> footer}}
    <!-- end of footer -->
  </body>
</html>